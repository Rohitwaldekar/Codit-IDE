package application;

import javafx.application.Application;
import javafx.geometry.Orientation;
import javafx.scene.Scene;
import javafx.scene.control.SplitPane;
import javafx.scene.layout.AnchorPane;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class Codit extends Application {

    @Override
    public void start (Stage stage) {
    	SplitPane root1 = new SplitPane();
    	root1.setOrientation(Orientation.VERTICAL);

//lower pane
    	final AnchorPane paneFixed = new AnchorPane();
    	paneFixed.getChildren().add(new Text("Lower pane"));

    	SplitPane.setResizableWithParent(paneFixed, Boolean.FALSE);
    	
    	
//upper pane
    	SplitPane paneFree = new SplitPane();
    	creacreateVerticlepane(paneFree);
    	
    	root1.getItems().addAll(paneFree, paneFixed);

    	stage.setScene(new Scene(root1,1300,700));
    	stage.show();
        }
    
    public static void main(String[] args) {
		launch(args);
	}
   
    public void creacreateVerticlepane(SplitPane root2)
    {
    	root2.setOrientation(Orientation.HORIZONTAL);

    	final AnchorPane paneFixed = new AnchorPane();
    	paneFixed.getChildren().add(new Text("fixed"));

    	SplitPane.setResizableWithParent(paneFixed, Boolean.FALSE);
    	
    	AnchorPane paneFree = new AnchorPane();
    	
    	root2.getItems().addAll(paneFree, paneFixed);
    }
}
